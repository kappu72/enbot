{
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window", "deno.ns", "es2022"],
    "strict": true,
    "exactOptionalPropertyTypes": false,
    "noImplicitReturns": false,
    "noUncheckedIndexedAccess": false
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "imports": {
    "@supabase/supabase-js": "jsr:@supabase/supabase-js@2",
    "@supabase/functions-js/edge-runtime": "jsr:@supabase/functions-js/edge-runtime"
  },
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-read --allow-import --watch local-dev.ts",
    "check": "deno check supabase/functions/enbot-webhook/index.ts",
    "check-local": "deno check local-dev.ts",
    "test-webhook": "deno run --allow-net test-webhook.ts"
  },
  "include": [
    "supabase/functions/**/*.ts",
    "local-dev.ts",
    "setup-bot-commands.ts",
    "test-webhook.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
